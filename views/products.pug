extends layouts/main.pug

block content
  h1="Listado de productos"

    if !products || !products.legth
      h2 No hay productos
    else 
    table(class="table")
      thead
        tr
          th(scope="col")="#"
          th(scope="col")="Nombre"
          th(scope="col")="Precio"
          th(scope="col")="Icono"
      tbody
      each product in products 
        tr
          <td>!{product.id}
          <td>!{product.title}
          <td>!{product.price}
          <td>!{product.thumbnail} 